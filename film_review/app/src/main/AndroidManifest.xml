<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.film_review">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".firstpage.review_content.ContentActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".personal.PersonalLogFragment"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".personal.RegisteredFragment"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".personal.PersonalLoginFragment"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".firstpage.search.activity_search"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".firstpage.review_content.TagActivity" />
    </application>

</manifest>