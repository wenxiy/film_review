<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainbody">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/h">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:id="@+id/TopArea">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:id="@+id/attention_icons"
                    android:background="@drawable/gerenx"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/attention_userTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/attention_icons"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/attention_icons"
                    android:text="2020-1-15"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/attention_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/attention_icons"
                    android:text="用户名"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:layout_above="@+id/attention_userTime"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/picture_review"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/TopArea"
                android:background="@color/test"/>
            <ImageView
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_alignBottom="@id/picture_review"
                android:background="@color/black"
                android:alpha="0.4"/>
            <TextView
                android:id="@+id/attention_reviewContent"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="20dp"
                android:textSize="12dp"
                android:textColor="#DDDDDD"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/shadow"
                android:text="内容摘要"/>

            <TextView
                android:id="@+id/attention_reviewName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="标题"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@id/shadow"
                android:textColor="#DDDDDD"/>

            <Button
                android:id="@+id/attention_tag"
                android:background="@drawable/tagbutton"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:text="@string/tag"
                android:textAllCaps="false"
                android:textColor="#ffaaaaaa"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>




